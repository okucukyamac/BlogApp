@using Entity.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>İşlem</th>
    </tr>
    @foreach (var item in Model)
    {
        var durum = item.Status == true ? "Aktif" : "Pasif";
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@(((DateTime)item.InsertDate).ToString("dd-MM-yyyy"))</td>
            <td>@item.Category.Name</td>
            <td>@durum</td>
            <td>
                <a href="/Blog/Delete/@item.Id" class="btn btn-danger btn-xs">Sil</a>
                <a href="/Blog/Edit/@item.Id" class="btn btn-warning btn-xs">Düzenle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Blog/BlogAdd" class="btn btn-info btn-sm">Yeni Blog Oluştur</a>

