@using Entity.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>İşlem</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.InsertDate</td>
            <td>@item.CategoryId</td>
            <td>@item.Status</td>
            <td>
                <a href="#" class="btn btn-danger btn-xs">Sil</a>
                <a href="#" class="btn btn-warning btn-xs">Düzenle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="#" class="btn btn-info btn-sm">Yeni Blog Oluştur</a>